<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:id="@+id/sensorsAndLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: "
            android:id="@+id/distanceId"
            android:layout_marginTop="30dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light:"
            android:id="@+id/lightId"
            android:layout_marginTop="30dp"
            android:layout_marginStart="120dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/batteryId"
            android:src="@drawable/battery_full"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"/>

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/car_lights"
            android:layout_gravity="left|top"
            android:background="@drawable/short_off"
            android:layout_marginEnd="66dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auto_lights_id"
            android:layout_alignBottom="@+id/lightId"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto lights"
            android:id="@+id/textView2"
            android:layout_above="@+id/auto_lights_id"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_below="@id/sensorsAndLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </RelativeLayout>

</RelativeLayout>